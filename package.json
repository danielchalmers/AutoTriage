{
  "name": "autotriage",
  "version": "0.1.0",
  "description": "AI triage for GitHub issues & PRs: summarizes, labels, comments, retitles and can close items using a project prompt + Gemini.",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "npm run typecheck && rimraf dist && ncc build src/index.ts -o dist --minify --license licenses.txt && npm run copy-assets",
    "copy-assets": "copyfiles -f examples/AutoTriage.prompt dist",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "github-actions",
    "triage",
    "issues",
    "pull-requests",
    "ai",
    "gemini"
  ],
  "author": "Daniel Chalmers",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "action.yml",
    "README.md",
    "dist/"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.1",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "rimraf": "^5.0.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@google/genai": "^1.21.0",
    "chalk": "^4.1.2"
  }
}
